<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper10"
    tools:context=".course.VideoMathPage">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="210dp"
            android:layout_height="20dp"
            android:layout_marginTop="25dp"
            android:background="@color/picton_blue"
            android:fontFamily="sans-serif"
            android:text="Enroll > Mathematics"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="25dp"
            android:text="Back"
            android:fontFamily="sans-serif"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@color/picton_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Mathematics"
            android:textAlignment="center"
            android:textColor="@color/prussian_blue"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="366dp"
            android:layout_height="193dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="172dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/chapter1Math"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombor Bulat" />

                <Button
                    android:id="@+id/chapter2Math"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombor asas" />

                <Button
                    android:id="@+id/chapter3Math"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kamiran tak tentu" />


            </LinearLayout>
        </ScrollView>

        <WebView
            android:id="@+id/videoViewMath"
            android:layout_width="397dp"
            android:layout_height="214dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>