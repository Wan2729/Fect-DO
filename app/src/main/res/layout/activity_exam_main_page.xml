<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper6"
    tools:context=".course.Activity.ExamMainPage">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/topicNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Selamat Datang ke Bahagian\n\t\t\t\t\t\t\t\t\t\t\tPeperiksaan"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".1" />

    <TextView
        android:id="@+id/tvCourseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Selamat menjawab"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/topicNumberText"
        app:layout_constraintStart_toStartOf="@+id/topicNumberText"
        app:layout_constraintTop_toBottomOf="@+id/topicNumberText" />

    <Button
        android:id="@+id/btnMath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="MULA"
        android:backgroundTint="#125488"
        android:background="@drawable/roundshapebutton"
        android:textColor="@color/white"
        android:fadingEdgeLength="50dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/tvCourseTitle"
        app:layout_constraintStart_toStartOf="@+id/tvCourseTitle"
        app:layout_constraintTop_toBottomOf="@+id/topicNumberText" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/whitebox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>